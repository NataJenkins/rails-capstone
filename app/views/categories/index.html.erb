<% @categories.each do |cat| %>
  <div class="cats-container d-flex">
    <%= link_to category_path(cat) do %>
      <% if !cat.first_article.nil? %>
        <div class="cat-art-image">
        <h2 class="cat-name">
        <%= cat.name %>
        </h2>  
          <%= image_tag(url_for(cat.first_article.avatar))%>
        </div>
      <% end %>

    <% end %>
  </div>
<% end %>