<div class="container">
  <%= form_with model: @user, class: 'form' do |f| %>
    <div class="field">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input" %>
    </div>
    <div class="field">
      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, class: "input" %>
    </div>
    <div class="btn">
    <%= f.submit %>
    </div>
  <% end %>
</div>